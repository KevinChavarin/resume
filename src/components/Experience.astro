---
import Translate from "./Translate.tsx";


type Experiences = {
  company: string;
  type: string;
  position: string;
  startDate: string;
  endDate?: string;
  description: string;
};

const experiences: Experiences[] = [
  {
    company: "IBM",
    type: "ibmExperienceType",
    position: "ibmExperienceTitle",
    startDate: "2022",
    endDate: "2023",
    description: "ibmDescription",
  },
];
---
    {experiences.map((experience) => 
        <div class="grid gap-2 md:grid-cols-1 max-w-2xl w-full mb-6">
            <h3 class="text-xl font-semibold text-neutral-900 dark:text-white">
                <Translate textKey={experience.position} fallback={experience.position} client:load />
            </h3>
            <div class="flex items-center mb-2">
                <h4 class="text-lg text-neutral-700 dark:text-neutral-300 mr-4">{experience.company}</h4>
                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ml-2">
                    <Translate textKey={experience.type} fallback={experience.type} client:load />
                </span>
                <p class="text-sm text-neutral-500 dark:text-neutral-300 text-right ml-auto">
                    {experience.startDate} - {experience.endDate ? experience.endDate : "Present"}
                </p>
            </div>
            <p class="text-base text-neutral-700 dark:text-neutral-200">
                <Translate textKey={experience.description} fallback={experience.description} client:load />
            </p>
        </div>)}
