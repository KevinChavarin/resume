---
import SocialLinks from "./SocialLinks.astro";
import AboutMe from "./AboutMe.astro";
import Experience from "./Experience.astro";
import Certifications from "./Certifications.astro";
import ThemeSwitcher from "./ThemeSwitcher.tsx";
import LanguageSwitcher from "./LanguageSwitcher.tsx";
import Translate from "./Translate.tsx";
import Skills from "./Skills.astro";

type Project = {
  title: string;
  description: string;
  link?: string;
  technologies: string[];
  github?: string;
};

const projects: Project[] = [
  {
    title: "projects.project1.title",
    description: "projects.project1.description",
    link: "https://facebook.com",
    technologies: [
      "React",
      "TypeScript",
      "Tailwind CSS",
      "Storybook",
      "SEO Optimized",
    ],
    github: "https://github.com/KevinChavarin/personal-blog",
  },
  {
    title: "projects.project2.title",
    description: "projects.project2.description",
    technologies: ["HTML", "CSS", "Javascript", "PHP", "MySQL"],
    github: "https://github.com/KevinChavarin/proyecto-asesoria",
  },
  {
    title: "projects.project3.title",
    description: "projects.project3.description",
    technologies: ["React", "ExpressJS", "Carbon Design System"],
  },
];
---
<nav class="flex items-center justify-between bg-white dark:bg-neutral-900 p-4 shadow-md">
  <ThemeSwitcher client:load/>
  <LanguageSwitcher client:load />
</nav>
<main
  class="min-h-screen bg-white dark:bg-neutral-900 flex flex-col items-center justify-center px-4 py-12"
>
  <header class="mb-2 text-center"></header>
  <section>
    <h1
      class="text-3xl md:text-6xl font-bold text-neutral-900 dark:text-white mb-2 tracking-tight"
    >
      Kevin Chavarin
    </h1>
    <div class="md:grid-cols-2 max-w-2xl w-full mb-2">
      <p class="text-neutral-500 dark:text-neutral-300 text-base">
        <Translate textKey="role" fallback="Role" client:load />
      </p>
    </div>
    <SocialLinks />
  </section>

  <section>
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-5">
      <Translate
        textKey="aboutMe"
        fallback="About Me"
        client:load>
    </h2>
    <AboutMe />
  </section>
  <section>
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-5">
      <Translate
        textKey="experience"
        fallback="Experience"
        client:load>
    </h2>
    <Experience />
  </section>
  <section class="max-w-2xl w-full mb-8">
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-1">
      <Translate
        textKey="education.label"
        fallback="education.label"
        client:load>
    </h2>
    <div class="space-y-2">
      <div class="flex items-center">
        <h3 class="text-xl font-semibold text-neutral-900 dark:text-white">
          <Translate
            textKey="education.degree"
            fallback="Bachelor's degree in Information Technologies"
            client:load
          />
        </h3>
        <h3 class="text-neutral-500 dark:text-neutral-300 text-base ml-auto">
          <Translate
            textKey="education.duration"
            fallback="January 2020 - June 2025"
            client:load
          />
        </h3>
      </div>
      <p class="text-neutral-500 dark:text-neutral-300 text-base">
        <Translate
          textKey="education.institution"
          fallback="University of Guadalajara"
          client:load
        />
      </p>
      <div>
        <span class="inline-block px-2 py-1 text-sm rounded bg-gray-100 dark:bg-neutral-700 text-gray-800 dark:text-neutral-200 hover:bg-gray-200 dark:hover:bg-neutral-600 transition-colors mt-2">
          <Translate
            textKey="education.specialization"
            fallback="Cybersecurity specialization"
            client:load
          />
        </span>
      </div>
    </div>
  </section>

  <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-5">
    <Translate
      textKey="projects.label"
      fallback="Projects"
      client:load
    />
  </h2>
  <section class="grid gap-6 md:grid-cols-2 max-w-2xl w-full mb-8">
    {
      projects.map((project) => (
        <div class="group block p-5 bg-neutral-50 dark:bg-neutral-800 rounded-lg border border-neutral-200 dark:border-neutral-700 transition-colors hover:bg-neutral-100 dark:hover:bg-neutral-700">
          <h2 class="text-xl font-medium text-neutral-900 dark:text-white mb-1 group-hover:underline flex items-center">
            {project.link ? (
              <>
                <a
                  href={project.link}
                  class="hover:underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Translate
                    textKey= {project.title}
                    fallback= {project.title}
                    client:load
                  />
                </a>
                <span class="ml-2 w-2 h-2 rounded-full bg-green-500 inline-block mx-1 animate-breathing" />
              </>
            ) : (
              <Translate
                textKey= {project.title}
                fallback= {project.title}
                client:load
              />
            )}
            {project.github && (
              <a
                href={project.github}
                class="inline-block ml-2 align-middle"
                aria-label="GitHub"
                target="_blank"
                rel="noopener noreferrer"
                title="Open Github repository"
              >
                <svg
                  width="24px"
                  height="24px"
                  viewBox="0 0 15.00 15.00"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="hover:scale-110 transition-transform duration-300"
                >
                  <g id="SVGRepo_bgCarrier" stroke-width="0" />
                  <g
                    id="SVGRepo_tracerCarrier"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <g id="SVGRepo_iconCarrier">
                    <path
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="M7.49936 0.850006C3.82767 0.850006 0.849976 3.8273 0.849976 7.50023C0.849976 10.4379 2.75523 12.9306 5.39775 13.8104C5.73047 13.8712 5.85171 13.6658 5.85171 13.4895C5.85171 13.3315 5.846 12.9135 5.84273 12.3587C3.99301 12.7604 3.60273 11.4671 3.60273 11.4671C3.30022 10.6988 2.86423 10.4942 2.86423 10.4942C2.26044 10.0819 2.90995 10.0901 2.90995 10.0901C3.57742 10.137 3.9285 10.7755 3.9285 10.7755C4.52167 11.7916 5.48512 11.4981 5.86396 11.3279C5.92438 10.8984 6.09625 10.6053 6.28608 10.4391C4.80948 10.2709 3.25695 9.70063 3.25695 7.15241C3.25695 6.42615 3.51618 5.83298 3.94157 5.368C3.87299 5.1998 3.64478 4.52375 4.00689 3.60807C4.00689 3.60807 4.56494 3.42926 5.83538 4.28941C6.36568 4.14204 6.93477 4.06856 7.50018 4.0657C8.06518 4.06856 8.63386 4.14204 9.16498 4.28941C10.4346 3.42926 10.9918 3.60807 10.9918 3.60807C11.3548 4.52375 11.1266 5.1998 11.0584 5.368C11.4846 5.83298 11.7418 6.42615 11.7418 7.15241C11.7418 9.70716 10.1868 10.2693 8.70571 10.4338C8.94412 10.6392 9.15681 11.045 9.15681 11.6655C9.15681 12.5542 9.14865 13.2715 9.14865 13.4895C9.14865 13.6675 9.26867 13.8745 9.60588 13.8095C12.2464 12.9282 14.15 10.4375 14.15 7.50023C14.15 3.8273 11.1723 0.850006 7.49936 0.850006Z"
                      class="fill-neutral-900 dark:fill-white"
                    />
                  </g>
                </svg>
              </a>
            )}
          </h2>
          <p class="text-neutral-600 dark:text-neutral-300 text-sm mb-3">
            <Translate
              textKey= {project.description}
              fallback= {project.description}
              client:load
            />
          </p>
          <div class="flex flex-wrap gap-2">
            {project.technologies.map((tech) => (
              <span class="px-2 py-1 text-xs rounded bg-gray-100 dark:bg-neutral-700 text-gray-800 dark:text-neutral-200 hover:bg-gray-500 dark:hover:bg-light-600">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </section>
  <section class="grid gap-1 md:grid-cols-1 max-w-2xl w-full mb-8">
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-2">
      <Translate
        textKey="certifications"
        fallback="Certifications"
        client:load>
    </h2>
    <Certifications />
  </section>
  <section class="grid gap-1 md:grid-cols-1 max-w-2xl w-full mb-8">
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-2">
      <Translate
        textKey="skills"
        fallback="Skills"
        client:load
      />
      <Skills />
    </h2>
  </section>
</main>
